<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="caculate" Content="计算" HorizontalAlignment="Left" Margin="30,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.048,3.956" Height="34" Width="70" Click="Button_Click"/>
        <TextBox x:Name="testBox1" HorizontalAlignment="Left" Margin="30,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="testBox2" HorizontalAlignment="Left" Margin="215,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="第一个数字" HorizontalAlignment="Left" Margin="30,25,0,0" VerticalAlignment="Top"/>
        <Label Content="第二个数字" HorizontalAlignment="Left" Margin="215,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.132,0.502"/>
        <RadioButton x:Name="a" Content="加" HorizontalAlignment="Left" Margin="30,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.912,0.466" Checked="RadioButton_Checked">
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.075"/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <RadioButton x:Name="b" Content="减" HorizontalAlignment="Left" Margin="184,108,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1"/>
        <RadioButton x:Name="c" Content="乘" HorizontalAlignment="Left" Margin="30,146,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_2"/>
        <RadioButton x:Name="d" Content="除" HorizontalAlignment="Left" Margin="184,146,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_3"/>

    </Grid>
</Window>
